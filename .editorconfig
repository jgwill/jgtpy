# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
# Docstrings and comments should have max_line_length = 80.
max_line_length = 90

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab
